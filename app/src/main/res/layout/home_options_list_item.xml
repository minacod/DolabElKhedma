<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_main_activity_list_itm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_list_item_right"
            android:orientation="vertical"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_right_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@drawable/shape_right">

            <TextView
                android:id="@+id/tv_main_option_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/main_add_atten"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list_item_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:background="@drawable/shape_left">

            <ImageView
                android:id="@+id/iv_main_option_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_attendance" />
        </LinearLayout>
    </LinearLayout>
