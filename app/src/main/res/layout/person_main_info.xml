<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:elevation="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_building_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_address"
        tools:text="21" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mmyy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_dd"
        app:layout_constraintRight_toLeftOf="@+id/tv_building_number"
        app:layout_constraintTop_toTopOf="@+id/tv_dd"
        app:layout_constraintVertical_bias="0.5"
        tools:text="شارع السادات المتفرع من فيصل الجيزة" />

    <TextView
        android:id="@+id/tv_mmyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="9999/99"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_dd"
        app:layout_constraintTop_toBottomOf="@+id/tv_dd"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_dd" />

    <TextView
        android:id="@+id/tv_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="14"
        android:textSize="54sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>